  "scripts": {
    "start": "cross-env NODE_PATH=src ts-node src/server.ts",
    "dev": "cross-env NODE_PATH=src nodemon --exec ts-node src/server.ts",
    "migrate:dev": "prisma migrate dev --preview-feature && prisma generate",
    "migrate:reset": "prisma migrate reset --preview-feature",
    "migrate:deploy": "prisma migrate deploy --preview-feature && prisma generate",
    "heroku-postbuild": "yarn && yarn migrate:dev && yarn dev"
  },
