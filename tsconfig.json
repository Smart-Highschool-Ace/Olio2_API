{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["ES6"],
    "outDir": ".build", // It doesn't work for serverless
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "allowJs": true,
    "rootDir": "./",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "esModuleInterop": true
  }
}
